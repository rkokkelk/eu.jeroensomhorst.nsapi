{
    "id": "eu.jeroensomhorst.nsapi",
    "name": {
        "en": "NS Public Transport info",
        "nl": "Nederlandse Spoorwegen app"
    },
    "description":{
        "nl": "Geef Homey de mogelijkheid om de NS dienstregeling te bekijken",
        "en": "Give Homey the power to use the Dutch Railway schedule info"
    },
    "images":{
        "large" : "./assets/images/large.jpg",
        "small" : "./assets/images/small.jpg"
    },
    "version": "0.1.3",
    "compatibility": "0.x || 1.x",
    "author": {
        "name": "Jeroen Somhorst",
        "email": "j.somhorst@gmail.com"
    },
    "category":["internet","localization"],
    "dependencies": {
        "request": "*"
    },
    "flow":{
    "actions":[{
            "id": "get_travel_advice",
            "title": {
                "en": "Get travel advice",
                "nl": "NS Reisinformatie"
            },
            "args":[
                {
                    "name": "from",
                    "type": "autocomplete",
                    "placeholder": {
                        "en": "Departure",
                        "nl": "Vertrekpunt"
                    }
                 },
                 {
                    "name": "to",
                    "type": "autocomplete",
                    "placeholder": {
                        "en": "Destination",
                        "nl": "Aankomst in"
                    }
                 },
                 {
                    "name": "via",
                    "type": "autocomplete",
                    "placeholder": {
                        "en": "Via",
                        "nl": "Via"
                    }
                 }
            ]
        },        
        {
            "id": "get_travel_advice_single",
            "title":{
                "nl": "Eerst volgende trein naar",
                "en": "Upcoming train to.."
            },
            "args":[
                {
                    "name": "from",
                    "type": "autocomplete",
                    "placeholder": {
                        "en": "Departure",
                        "nl": "Vertrekpunt"
                    }
                 },
                 {
                    "name": "to",
                    "type": "autocomplete",
                    "placeholder": {
                        "en": "Destination",
                        "nl": "Aankomst in"
                    }
                 },
                {
                    "name": "via",
                    "type": "autocomplete",
                    "placeholder": {
                        "en": "Via",
                        "nl": "Via"
                    }
                 }
                 
            ]
        }],
    "triggers":[],
    "conditions": []
    },
   
    "permissions": [
        "homey:manager:speech-output",
        "homey:manager:speech-input"
    ]

}
